			svg.progress.t-info(viewBox="25 25 50 50")
				circle.track(stroke-dasharray= "73, 125")
			svg.progress.t-warn(viewBox="25 25 50 50")
				circle.track(stroke-dasharray= "98, 125")
			svg.progress.t-danger(viewBox="25 25 50 50")
				circle.track(stroke-dasharray= "110, 125")
		div
			svg.progress(viewBox="25 25 50 50")
				circle
				circle.track(stroke-dasharray= "90, 125")
			svg.progress.t-primary(viewBox="25 25 50 50")
