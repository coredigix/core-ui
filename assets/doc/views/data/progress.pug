extends ../_layout
append head
	title Progress
block body
	form.container
		h1 Progress

		h2 Bars

		div
			.label Loading 25%
			.progress #[.track(style="width:25%")]
		.m-top
			.label Loading 60%
			.progress.t-primary #[.track(style="width:60%")]
		.m-top
			.label Loading 45%
			.progress.t-success #[.track(style="width:45%")]
		.m-top
			.label Loading 79%
			.progress.t-info #[.track(style="width:79%")]
		.m-top
			.label Loading 18%
			.progress.t-warn #[.track(style="width:18%")]
		.m-top
			.label Loading 99%
			.progress.t-danger #[.track(style="width:99%")]
		.m-top
			.label Loading 37%
			.progress.disabled #[.track(style="width:37%")]

		.m-top
			.progress.t-primary #[.track(style="width:33%") #[small.t-white 33%]]
		.m-top
			.progress.t-primary #[.track.t-center(style="width:54%") #[small.t-white 54%]]
		.m-top
			.progress.t-primary #[.track.t-end(style="width:60%") #[small.t-white 60%]]

		.m-top.flex.flex-middle
			.grow1.progress.m-right #[.track(style="width:42%")]
			small 42%

		h2 Loading
		div
			.label Loading ...
			.progress.loading #[.track(style="width:42%")]

		h2 Circular progress bar
		div
			svg.progress(viewBox="25 25 50 50")
