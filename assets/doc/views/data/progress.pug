			svg.progress.v-middle.xs.t-success(viewBox="25 25 50 50")
				circle
				circle.track(stroke-dasharray= "65, 125")
		h2 Circular Loading
		div
			svg.progress.loading(viewBox="25 25 50 50")
				circle.track(stroke-dasharray= "90, 125")
			svg.progress.loading(viewBox="25 25 50 50")
				circle
				circle.track(stroke-dasharray= "90, 125")

		h2 Radial progress bar
		//- XS
		div
			svg.progress.radial.v-bottom(viewBox="35 29 30 22")
