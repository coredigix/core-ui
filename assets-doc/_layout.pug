doctype
html
	head
		block head
			base(href=`file:///${self.rootDir}/doc/`)
			meta(charset="utf-8")
			meta(name="viewport" content="initial-scale=1, width=device-width")
			//- meta(name="viewport" content="minimum-scale=1, initial-scale=1, width=device-width, shrink-to-fit=no")
			link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,400italic|Roboto+Mono:400,500|Material+Icons")
			link(rel='stylesheet' href="../build/core-ui.css")

			//- SEO
			//- link(rel="shortcut icon" href="/favicon.ico")
			//- canonical URL
			//- link(rel='canonical' href='http://example.com/path/to/page')
			script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")

	body
		//- links
		.flex
			.p-tiny
				each lnk in self.links
					a.block(href=lnk) #{lnk}
			.grow1
				block body
		//- js
		script(src='../build/core-ui.js')
		block footerScripts