			//- radio
			.col.sm4.md3
				p Radio
				label.block.f-radio
					input(type="radio" name="rd1")
					span
					span.label Radio label
				label.block.f-radio.primary #[input(type="radio" name="rd1")]#[span]#[span.label Radio label]
				label.block.f-radio.success #[input(type="radio" name="rd1")]#[span]#[span.label Radio label]
				label.block.f-radio.info #[input(type="radio" name="rd1")]#[span]#[span.label Radio label]
				label.block.f-radio.warn #[input(type="radio" name="rd1")]#[span]#[span.label Radio label]
