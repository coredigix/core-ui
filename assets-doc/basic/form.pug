extends ../_layout
append head
	title Forms
block body
	//- input text
	.container
		h1 Text Inputs:

		h2 Basic use:
		form.row
			.col.sm6.md4
				p Add class "f-cntrl" to the field container to active magic!
				label.f-cntrl
					input(type="text" placeholder="Input text")
				label.f-cntrl
					input(type="password" placeholder="Input password")
				label.f-cntrl
					input(type="text" placeholder="Disabled input" disabled)
				label.f-cntrl
					textarea Text area content
			.col.sm6.md4
				p Icons: use material icons (or any)
				label.f-cntrl
					i.ico dashboard
					input(type="text" placeholder="Input text")
				label.f-cntrl
					input(type="text" placeholder="Input text")
					i.ico class
				label.f-cntrl
					i.ico contact_support
					input(type="text" placeholder="Input text")
					i.ico done
				label.f-cntrl
					i.ico contact_support
					textarea Text area content
					i.ico done
			.col.sm6.md4
				p with label:
				.f-cntrl.m-top
					.label Input label:
					label
						i.ico dashboard
						input(type="text" placeholder="Input text")
				.f-cntrl.m-top
					.label Input label:
					.desc Input description
					label
						i.ico dashboard
						input(type="text" placeholder="Input text")
				.f-cntrl.m-top
					.label Input label#[span.desc - Input description]
					label
						i.ico dashboard
						input(type="text" placeholder="Input text")
				.f-cntrl.m-top
					.label Input label:
					label
						i.ico dashboard
						input(type="text" placeholder="Input text")
					.desc.t-right Input description

		h2 States:
		form.row
			.col.sm6.md4
				-var states = ['has-done', 'has-info', 'has-warn', 'has-error', 'loading']
				each state in states
					.f-cntrl.m-top(class=state)
						.label Input label:
						label
							i.ico dashboard
							input(type="text" placeholder="Input text")
						//- messages
						.desc.t-right
							.when-done #[i.ico done] Message when done.
							.when-info #[i.ico info] Message when info.
							.when-warn #[i.ico warning] Message when warn.
							.when-error #[i.ico error] Message when error.
							.when-loading #[i.ico.anti-rotate sync] Message when loading.
			.col.sm6.md4
				-var states = ['has-done', 'has-info', 'has-warn', 'has-error', 'loading']
				each state in states
					.f-cntrl.m-top(class=state)
						.label Input label:
						label
							i.ico dashboard
							input(type="text" placeholder="Input text")
							.when-done.ico done
							.when-info.ico info
							.when-warn.ico warning
							.when-error.ico error
							.when-loading.ico.anti-rotate sync
						//- messages
						.desc.t-right
							.when-done Message when done.
							.when-info Message when info.
							.when-warn Message when warn.
							.when-error Message when error.
							.when-loading Message when loading.

		h2 Progress:
		form.row
			.col.sm6.md4
				.f-cntrl.m-top
					.label Input label:
						label
							i.ico dashboard
							input(type="text" placeholder="Input text")
							//- progress
							.progress.loading
								.pc #[.pb(style={width:'60%'})]
				.f-cntrl.m-top
					.label Input label:
						label
							i.ico dashboard
							input(type="text" placeholder="Input text")
							//- progress
							.progress
								.pc #[.pb(style={width:'60%'})]

